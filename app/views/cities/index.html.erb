<!-- begin #content -->
    <div id="content" class="content">
      <!-- begin breadcrumb -->
      <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li><a href="javascript:;">Tables</a></li>
        <li><a href="javascript:;">Managed Tables</a></li>
        <li class="active">ColReorder</li>
      </ol>
      <!-- end breadcrumb -->
      <!-- begin row -->
      <div class="row">
          <div class="col-md-12">
              <!-- begin panel -->
                    <div class="panel panel-inverse">
                        <div class="panel-heading">
                            <div class="panel-heading-btn">
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                                 <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                            <%= link_to '', new_city_path, class: " fa fa-plus fa-fw btn btn-xs btn-icon btn-circle btn-danger" %>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                        </div>
                        <h4 class="panel-title">Cities</h4>
                        </div>
                        <div class="panel-body">
                 <table id="data-table" class="table table-striped table-bordered">
                <thead>
                  <tr>
                  <th>Id</th>
                  <th>Country</th>
                  <th>State</th>
                  <th>City</th>
         <th>Status</th>
                  <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cities.each_with_index do |city, index| %>
                  <tr>
                    <td><%= index = index+1 %></td>                     
                    <% @countries.each do |country| %> 
                      <% if(country.id==city.country_id)%>
                            <td><%= country.name %></td>
                      <%  end %>  
                    <% end %>
                    <% @states.each do |state| %> 
                      <% if(state.id==city.state_id)%>
                            <td><%= state.name %></td>
                      <%  end %>  
                    <% end %>
                    <span class="label label-success"></span>
                      <td><%= city.name %></td>
                     <td>
                      <% if(city.status==true)%>
                         <%= link_to 'Active', set_status_city_path(id: city.id, status: city.status ), class:'label label-success' %>
                       <% else %> 
                        <%= link_to 'InActive', set_status_city_path(id: city.id, status: city.status ), class:'label label-danger' %>
                       <% end %> 
                     </td>
                     <td>
                      <%= link_to '', edit_city_path(id: city.id), class:'btn btn-primary btn-xs fa fa-pencil-square-o' %>
                      <%= link_to '', city_path(id: city.id), class:'btn btn-danger btn-xs fa fa-trash', data: {:confirm => 'Are you sure?'}, method: :delete %></td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
                </div>
              </div>
          </div>
      </div>
   </div>
    <!-- end #content -->
    
  <script src="/assets/jquery-ui.min.js"></script>
  <script src="/assets/jquery.slimscroll.min.js"></script>
  <script src="/assets/jquery.dataTables.js"></script>
  <script src="/assets/dataTables.bootstrap.min.js"></script>
  <script src="/assets/dataTables.colReorder.min.js"></script>
  <script src="/assets/dataTables.responsive.min.js"></script>
  <script src="/assets/table-manage-colreorder.demo.min.js"></script>
 
  
  <script>
    $(document).ready(function() {
      App.init();
      TableManageColReorder.init();
    });
  </script>

